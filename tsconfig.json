{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "./",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"]
    },

    "jsx": "preserve",
    "jsxImportSource": "react",

    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
